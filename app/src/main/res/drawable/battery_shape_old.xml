<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define overall size -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="26dp" android:height="16dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Battery body -->
    <item android:gravity="left">
        <shape android:shape="rectangle">
            <size android:width="24dp" android:height="16dp"/>
            <solid android:color="#FFFFFF"/>
            <stroke android:width="1dp" android:color="#B3B3B3"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Battery head -->
    <item android:left="23dp" android:top="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <size android:width="3dp" android:height="4dp"/>
            <solid android:color="#666666"/>
            <stroke android:width="1dp" android:color="#B3B3B3"/>
            <corners android:radius="1dp"/>
        </shape>
    </item>

</layer-list>