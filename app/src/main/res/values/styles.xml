<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/pingfang</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#EEEEEE</item>
    </style>

    <style name="volume_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/ic_volume_btn</item>
        <item name="android:fontFamily">@font/pingfang</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/volume_text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="shutdown_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_shutdown_btn</item>
        <item name="android:fontFamily">@font/pingfang</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@color/volume_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CommonBatterViewStyle">
        <item name="lowLevelColor">#FF0000</item>
        <item name="normalLevelColor">#EEEEEE</item>
        <item name="chargingColor">#00FF00</item>
    </style>

</resources>